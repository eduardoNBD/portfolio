<section class="mt-10">
    <div class="w-full mx-auto md:w-[991px] px-4">
        <hr>
        <div class="grid grid-cols-12 py-10 px-4">
            <div class="col-span-12 md:col-span-8">
                <h3 class="text-4xl text-gray-950 dark:text-white text-center sm:text-left dark:font-bold">{Astro.props.title}</h3>
                <p class="text-2xl mt-4 text-gray-950 dark:text-white text-center sm:text-left">{Astro.props.subtitle}</p> 
            </div>
            <div class="col-span-12 md:col-span-4  text-center sm:text-right mt-10">
                {Astro.props.buttonText.map( (text:string, index:number) => {
                    return <a href={Astro.props.buttonHref[index]} class={`mr-2 ${Astro.props.btnClassName[index]}`}>{text}</a> 
                })}
            </div>
        </div> 
        <hr>
    </div>
</section>