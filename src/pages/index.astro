---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Github from '../components/icons/Github.astro';
import Linkedin from '../components/icons/Linkedin.astro';
import Linkpill from '../components/Linkpill.astro'
import Mail from '../components/icons/Mail.astro';
import CustomSection from '../components/CustomSection.astro';
import ContentBorderAnimated from '../components/ContentBorderAnimated.astro'
import BoxScroll from '../components/BoxScroll.astro';
import TimeLine from '../components/TimeLine.astro';
import { events } from '../constants/arrayData';
---

<Layout title="Eduardo E. Developer">
	<main class="px-8 md:px-4 pb-20">
		<CustomSection class="pb-14">  
			<img class="rounded-full w-12 h-12 mb-10 mx-auto md:mx-0" src="/assets/img/me.jpeg" alt="Logo">
			<h1 class="text-gray-600 dark:text-white text-3xl md:text-5xl font-bold block sm:flex flex-row gap-x-2 pb-4 md:pb-10 justify-between">Hola, Soy Eduardo 
				<a href="https://www.linkedin.com/in/eduardo-e/" rel="noopener" target="_blank" class="mt-3 md:mt-0 flex items-center md:justify-center">
					<Badge color="blue">Disponible para trabajar</Badge> 
				</a>
			</h1> 
			<ContentBorderAnimated>
				<h2 class="text-md sm:text-xl text-gray-600 dark:text-white ">
					Soy un programador Full Stack con amplia experiencia en el desarrollo de aplicaciones web utilizando tecnologías modernas y sólidas. Domino frameworks avanzados tanto de front-end como de back-end, lo que me permite crear soluciones integrales, eficientes y escalables para diversas necesidades empresariales.
				</h2> 
			</ContentBorderAnimated>
			<ul class="flex justify-center items-center gap-x-4 mt-10">
				<li>
					<Linkpill href="https://github.com/eduardoNBD" >
						<Github class="text-gray-600 dark:text-gray-200 size-8"/>
						<span class="hidden sm:inline-block">Github</span>
					</Linkpill>
				</li>
				<li>
					<Linkpill href="https://www.linkedin.com/in/eduardo-e/" rel="noopener" target="_blank">
						<Linkedin class="text-gray-600 dark:text-gray-200 size-8"/>
						<span class="hidden sm:inline-block">Linkedin</span>
					</Linkpill>
				</li>

				<li>
					<Linkpill href="mailto:lalo_elma@hotmail.com" rel="noopener" target="_blank">
						<Mail class="text-gray-600 dark:text-gray-200 size-8"/>
						<span class="hidden sm:inline-block">lalo_elma@hotmail.com</span>
					</Linkpill>
				</li>
			</ul> 
		</CustomSection>
		<CustomSection>
			<TimeLine events={events} />
		<CustomSection>
		<!--<BoxScroll /> -->
	</main>
</Layout>
